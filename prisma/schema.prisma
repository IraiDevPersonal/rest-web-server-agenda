generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model roles {
  id    Int     @id @default(autoincrement())
  name  String
  users users[]
}

model professions {
  id                       Int                        @id @default(autoincrement())
  name                     String
  professional_professions professional_professions[]
}

model professionals {
  id                      BigInt                     @id @default(autoincrement())
  user_id                 BigInt
  users                   users                      @relation(fields: [user_id], references: [id])
  service_provider_id     Int?
  serviceProviders        service_providers?         @relation(fields: [service_provider_id], references: [id])
  professional_profession professional_professions[]
  schedules               schedules[]
}

model professional_professions {
  professional_id BigInt
  professionals   professionals @relation(fields: [professional_id], references: [id])
  profession_id   Int
  professions     professions   @relation(fields: [profession_id], references: [id])

  @@id([profession_id, professional_id])
}

model service_providers {
  id                     Int                      @id @default(autoincrement())
  name                   String
  rut                    String
  service_provider_codes service_provider_codes[]
  professionals          professionals[]
}

model service_provider_codes {
  id                  Int               @id @default(autoincrement())
  code                String
  title               String
  service_provider_id Int
  service_providers   service_providers @relation(fields: [service_provider_id], references: [id])
}

model users {
  id            BigInt          @id @default(autoincrement())
  uid           String          @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  rut           String          @unique
  names         String
  last_names    String
  email         String          @unique
  password      String
  is_admin      Boolean         @default(false)
  phone         String
  role          roles           @relation(fields: [role_id], references: [id])
  role_id       Int
  professionals professionals[]
}

model schedules {
  id              BigInt        @id @default(autoincrement())
  uid             String        @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  professional_id BigInt
  week_day        WeekDay
  date            DateTime      @db.Date
  time_from       String
  time_to         String
  is_enabled      Boolean       @default(true)
  professional    professionals @relation(fields: [professional_id], references: [id])
  appointments    appointment[]
}

enum WeekDay {
  LUNES
  MARTES
  MIERCOLES
  JUEVES
  VIERNES
  SABADO
  DOMINGO
}

model patients {
  id           BigInt        @id @default(autoincrement())
  uid          String        @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  rut          String        @unique
  names        String
  last_names   String
  email        String        @unique
  phone        String
  appointments appointment[]
}

model appointment {
  id                 BigInt            @id @default(autoincrement())
  uid                String            @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  patient_id         BigInt
  schedule_id        BigInt            @unique
  appointment_status AppointmentStatus
  schedule           schedules         @relation(fields: [schedule_id], references: [id])
  patient            patients          @relation(fields: [patient_id], references: [id])
}

enum AppointmentStatus {
  TO_CONFIRM
  CONFIRMED
  CANCELLED
  AVAILABLE
}
