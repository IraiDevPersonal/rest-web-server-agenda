generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model roles {
  id    Int     @id @default(autoincrement())
  name  String
  users users[]
}

model appointment_status {
  id           Int           @id @default(autoincrement())
  name         String
  appointments appointment[]
}

model users {
  id         BigInt      @id @default(autoincrement())
  uid        String      @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  rut        String      @unique
  names      String
  last_names String
  email      String      @unique
  password   String
  is_admin   Boolean     @default(false)
  phone      String
  role       roles       @relation(fields: [role_id], references: [id])
  role_id    Int
  schedules  schedules[]
}

model schedules {
  id              BigInt       @id @default(autoincrement())
  professional_id BigInt
  week_day        WeekDay
  time_from       String
  time_to         String
  is_enabled      Boolean      @default(true)
  professional    users        @relation(fields: [professional_id], references: [id])
  appointments    appointment?
}

enum WeekDay {
  LUNES
  MARTES
  MIERCOLES
  JUEVES
  VIERNES
  SABADO
  DOMINGO
}

model patients {
  id           BigInt        @id @default(autoincrement())
  uid          String        @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  rut          String        @unique
  names        String
  last_names   String
  email        String        @unique
  phone        String
  appointments appointment[]
}

model appointment {
  id                    BigInt             @id @default(autoincrement())
  patient_id            BigInt
  schedule_id           BigInt             @unique
  appointment_status_id Int
  appointment_status    appointment_status @relation(fields: [appointment_status_id], references: [id])
  schedule              schedules          @relation(fields: [schedule_id], references: [id])
  patient               patients           @relation(fields: [patient_id], references: [id])
}
